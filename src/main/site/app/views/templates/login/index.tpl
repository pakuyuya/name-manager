<section class="p-login">
	<div class="p-title">
		<h2 class="p-title-text">Welcome</h2>
		<div class="p-title-underline"></div>
	</div>
	<form id="login-form" class="p-form" action="main" method="post">
		<div class="c-line">
			<label for="loginId"><span class="icon-user"></span></label>
			<input type="text" id="loginId" name="loginId" placeholder="user id" />
		</div>
		<div class="c-line">
			<label for="loginPw"><span class="icon-key"></span></label>
			<input type="password" id="loginPw" name="loginPw" placeholder="password" />
		</div>
		<div class="p-form-cmd c-line">
			<button id="login-button" type="submit" class="primary">Login</button>
		</div>
	</form>
</section>